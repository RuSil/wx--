swiper{
  height: 380px;
  width: 100%;
}
swiper image{
  width: 100%;
  height: 100%;
}

.bottom{
  width: 100%;
  border-top: 1px solid ;
  height: 60px;
  position: absolute;
  bottom: 0;
  display: flex;
  justify-content: space-around;
}
.bottom-events{
  text-align: center;
  margin: 0 15rpx;
}
.bottom-events image{
  width: 60rpx;
  height: 60rpx;
}
.bottom-events text{
  display: block;
  font-size: 22rpx;
}
.bottom-buy{
  margin: 10rpx;
  line-height: 50px;
  background-color: pink;
  color: white;
}
.bottom-buy text{
  padding: 0 20rpx;
  display: inline-block;
}
.bottom-buy text:first-child{
  background: rgb(251, 94, 118);
}
.bottom-buy text:last-child{
  background: rgb(247, 52, 81);
}

/*使屏幕变暗  */
.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}
/*弹出框 */
.commodity_attr_box {
  height: 900rpx;
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
  padding-top: 20rpx;
  overflow: visible;
  font-size: 30rpx;
}

