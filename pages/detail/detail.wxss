/* 商品简介 */
.modal-summary {
  height: 150rpx;
  border-bottom: 1px solid;
  padding-top: 30rpx;
  margin-bottom: 30rpx;
}
/* 商品缩略图 */
.modal-summary image{
  width: 235rpx;
  height: 235rpx;
  background-color: pink;
  position: absolute;
  top: -35rpx;
  margin-left: 40rpx;
}
.summary-text{
  margin-left: 300rpx;
}
.modal-style {
  margin-left: 40rpx;
}
/* 款式选项 */
.modal-style-text{
  overflow: auto;
  display: flex;
  flex-wrap: wrap;
}
.modal-style-text text{
  margin: 30rpx 16rpx;
  border: 1px solid;
  padding: 0 30rpx;
}

/* 购买数量 */
.modal-number{
  padding: 30rpx;
  width: 100%;
  border-top: 1px solid;
  position: absolute;
  bottom: 150rpx;
}
.modal-number-text{
  float: left;
  position: absolute;
  top: 40rpx;
}
.modal-number-btn{
  float: left;
  margin-left: 520rpx;
}
.modal-number-btn text{
  display: inline-block;
  font-size: 26rpx;
  padding: 16rpx;
  border:1px solid;
}
/* 购买按钮 */
.btn-buy{
  margin:0 30rpx;
  position: absolute;
  bottom: 40rpx;
  width: 90%;
  color: white;
  background-color:rgb(247, 52, 81); 
}